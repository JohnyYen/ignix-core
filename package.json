  "repository": {
    "type": "git",
    "url": "https://github.com/JohnyYen/ignix-core"
  },
  "bugs": {
    "url": "https://github.com/JohnyYen/ignix-core/issues"
  },
  "homepage": "https://github.com/JohnyYen/ignix-core#readme",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "jsdoc": "^4.0.5",
    "ts-jest": "^29.4.6",
    "typedoc": "^0.28.16",
    "typescript": "^5.9.3"
  }
