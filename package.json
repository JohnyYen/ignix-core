{
  "name": "@ignix/core",
  "version": "1.5.0",
  "description": "A TypeScript package for type-safe services with Result pattern, ORM-agnostic repositories, and framework-flexible API handlers.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "docs": "typedoc --skipErrorChecking",
    "prepublishOnly": "pnpm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "services",
    "result-pattern",
    "orm",
    "api-handlers",
    "nestjs",
    "express",
    "fastify",
    "hono"
  ],
  "author": "Johny A. Pedraza <Developer>",
